<div class="userindex-container">
	<div class="usercontainer">
		<div class="user-atts"><%= current_user.name %></div>
		<div class="user-atts">Tweets: <%= current_user.followers %></div>
		<div class="user-atts">Followers: <%= current_user.tweets %></div>
	</div>

	<div class="scrollcontainer">
		<div class="twitcontainer">
			<% @campaigns.each do |c| %>
			<% if (c.followers <= current_user.followers) && (c.location == current_user.location) && (c.tweets > 0) %>
				<% c.campaign_users.each do |x| %>
					<% if x.user_id != current_user.id %>

				<div class="twitcontent">

					<div class="twitprofile">
						<%= image_tag current_user.image, :class=>"twitprofilepic" %>
					</div>
					<div class="twitright">
						<div class="campaignname">
							<%= c.name %>
						</div>
						<div class="twitname">
							<%= current_user.name %>
						</div>
						<div class="twitscreenname">
							  &nbsp @<%= current_user.screen_name %>
						</div>

						<div class="status">
							<%= c.status %>
						</div>
						<div class="twitstatusimg">
							<%= image_tag(c.avatar.url(:original), :class => "statusimg") %>
						</div>
						<div class="promotedby">
							Promoted by <%= c.business.name %>
						</div>
						<div class="twitbutton">
					  		<%= button_to 'Post to Twitter', post_path(current_user, :status => c.status, :img => c.avatar.url(:medium), :campaign => c.id ), data: {confirm: 'Are you sure you want to post this ad?'}, :class => "usertwitbutton" %>
						</div>
					</div>
				</div>
									<% end %>
				<% end %>
			<% end %>
			<% end %>

		</div>
	</div>
</div>

<style>
body {
	background-color: #8fc0db;
}
</style>