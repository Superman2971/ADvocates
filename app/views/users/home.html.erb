<style>
body, html {
  overflow: hidden;
}
.parallax-group a { 
  color: black;
  text-decoration: none;
}
.parallax-group a:hover { 
  color: white;
  text-decoration: none;
}
.businesslogin {
  margin-top: 15px;
  height: 40px;
  width: 185;
  border: 1px solid black;
  border-radius: 20px;
  background-color: none;
  float: right;
}

.businesslogin:hover {
  border-radius: 20px;
  background-color: black;
}

.userlogin {
  margin-top: 15px;
  height: 40px;
  width: 120px;
  border: 1px solid black;
  border-radius: 20px;
  background-color: none;
  margin-right: 20px;
  float: right;
}

.userlogin:hover {
  border-radius: 20px;
  background-color: black;
}

.loginbutton {
  font-family: "Helvetica";
  font-weight: 200;
  font-size: 20px;
  float: left;
}

.loginbutton:hover {
  color: white;
  font-color: white;
}
.ticker {
  height: 50px;
  margin: auto 15px;
  overflow-x: hidden;
  white-space: nowrap;
  font-size: 25px;
  vertical-align: center;
}
.ticker_post {
  display: inline-block;
  position: relative;
  -webkit-animation: ticker 60s linear infinite;
  -moz-animation: ticker 60s linear infinite;
  -ms-animation: ticker 60s linear infinite;
  animation: ticker 60s linear infinite;
}
/* Chrome, Safari, Opera */
@-webkit-keyframes ticker {
  from {left: 0;}
  to {left: -9000px;}
}
/* Standard syntax */
@keyframes ticker {
  from {left: 0;}
  to {left: -9000px;}
}
/* Firefox */
@-moz-keyframes ticker {
  from {left: 0;}
  to {left: -9000px;}
}
/* Internet Explorer */
@-ms-keyframes ticker {
  from {left: 0;}
  to {left: -9000px;}
}
</style>
