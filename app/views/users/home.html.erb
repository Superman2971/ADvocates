      <div class="signup-container">
        <div class="bussignup">
          <div><h3>Sign up as a business!</h3></div>
          <%= form_for business_new do |f| %>
          <% flash.each do |k,v| %>
          <div class="col-md-12 alert alert-danger" role="alert">
            <%= v %>
          </div>
          <% end %>
          <div class="field">
            <%= f.label :name %><br>
            <%= f.text_field :name, :required => true, :class => "form-control input-lg" %>
          </div>
          <div class="field">
            <%= f.label :email %><br>
            <%= f.text_field :email, :required => true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}', :class => "form-control input-lg" %>
          </div>
          <div class="field">
            <%= f.label :password %><br>
            <%= f.password_field :password, :required => true, :class => "form-control input-lg" %>
          </div>
          <div class="field">
            <%= f.label :password_confirmation %><br>
